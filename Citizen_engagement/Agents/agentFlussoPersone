from crewai import Agent

# Creazione dell'agente per il flusso di persone
flow_agent = Agent(
    model="openai:gpt-4",
    system_prompt="Simula il flusso di persone in un evento pubblico."
)

# Parametri dello scenario
flow_scenario = {
    "total_people": 1000,
    "entrances": 3,
    "exits": 5,
    "average_speed": 1.2,  #velocita media di una persona
    "building_area": 1500,  # Area in m²
    "densita_folla": "medium"  # Densità della folla
}

# Esecuzione della simulazione
result = flow_agent.run(flow_scenario)
print("Risultati del flusso di persone:", result)
