from crewai import Agent

# Creazione dell'agente per il personale pubblico
staff_agent = Agent(
    model="openai:gpt-4",
    system_prompt="Stima il personale pubblico necessario per un evento specifico."
)

# Parametri dello scenario
staff_scenario = {
    "event_type": "concert",
    "audience_size": 1000,
    "risk_level": "medium",  # Livello di rischio
    "duration_hours": 3  # Durata dell'evento in ore
}

# Esecuzione della simulazione
result = staff_agent.run(staff_scenario)
print("Stima del personale pubblico:", result)
