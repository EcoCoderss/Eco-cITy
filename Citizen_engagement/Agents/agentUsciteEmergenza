from crewai import Agent

# Creazione dell'agente per le uscite di emergenza
exit_agent = Agent(
    model="openai:gpt-4",
    system_prompt="Valuta l'efficienza di diverse configurazioni di uscite di emergenza."
)

# Parametri dello scenario
exit_scenario = {
    "exits": [2, 3, 5],  # Configurazioni delle uscite
    "building_capacity": 1000,  # Numero massimo di persone
    "evacuation_time_goal": 300  # Tempo massimo in secondi
}

# Esecuzione della simulazione
result = exit_agent.run(exit_scenario)
print("Risultati delle uscite di emergenza:", result)
